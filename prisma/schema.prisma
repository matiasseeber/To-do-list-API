generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model refresh_tokens {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  token      String    @db.VarChar(256)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  users      users?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_users")
}

model users {
  id                             Int              @id @default(autoincrement())
  username                       String           @unique @db.VarChar(50)
  email                          String           @unique @db.VarChar(100)
  password                       String?          @db.VarChar(100)
  verification_code              Int?
  last_verification_code_sent_at DateTime?        @db.Timestamp(6)
  last_verification_at           DateTime?        @db.Timestamp(6)
  refresh_tokens                 refresh_tokens[]
  todos                          todos[]
}

model todos {
  id          Int      @id @default(autoincrement())
  user_id     Int?
  description String?  @db.VarChar(256)
  finished    Boolean? @default(false)
  active      Boolean? @default(true)
  users       users?   @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_users")
}
